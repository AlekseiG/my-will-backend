<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Разрешаем HTTP-трафик (cleartext) к локальным адресам, используемым для разработки -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Доступ из Android-эмулятора к локальному хосту -->
        <domain includeSubdomains="false">10.0.2.2</domain>
    </domain-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Доступ к локальному серверу по IP в Wi‑Fi сети -->
        <domain includeSubdomains="false">192.168.1.8</domain>
    </domain-config>
</network-security-config>
